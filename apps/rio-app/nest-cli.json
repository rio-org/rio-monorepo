{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/api-rio/",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api-rio/tsconfig.app.json",
    "watchAssets": true,
    "assets": ["**/*.yaml"]
  },
  "projects": {
    "api-rio": {
      "type": "application",
      "root": "apps/api-rio",
      "entryFile": "main",
      "sourceRoot": "apps/api-rio/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-rio/tsconfig.app.json"
      }
    },
    "task-scheduler": {
      "type": "application",
      "root": "apps/task-scheduler",
      "entryFile": "main",
      "sourceRoot": "apps/task-scheduler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/task-scheduler/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    }
  }
}
