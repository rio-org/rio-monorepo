{
  "name": "rio-app",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "clean:build": "rimraf ./dist",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint apps/**/*.ts libs/**/*.ts --ext .ts",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --check  \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:fix": "prettier --write  \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "test": "NODE_OPTIONS=--max-old-space-size=8192 jest --no-cache --useStderr --runInBand --detectOpenHandles --forceExit --verbose --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@apollo/client": "^3.8.7",
    "@internal/config": "workspace:*",
    "@internal/db": "workspace:*",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.7",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^5.1.2",
    "@rionetwork/sdk": "workspace:0.1.0-alpha.25",
    "@svtslv/nestjs-ioredis": "^1.0.2",
    "@types/pg": "^8.11.4",
    "bignumber.js": "^9.1.2",
    "body-parser": "^1.20.2",
    "cache-manager": "^5.4.0",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "colorette": "^2.0.20",
    "compression": "^1.7.4",
    "dotenv": "^16.3.2",
    "drizzle-orm": "^0.30.4",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "js-big-decimal": "^2.0.4",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ts-try": "^0.2.0",
    "viem": "^2.9.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "moduleNameMapper": {
      "@rio-app/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@rio-app/common": "<rootDir>/libs/common/src",
      "@rio-app/config/(.*)": "<rootDir>/libs/config/src/$1",
      "@rio-app/config": "<rootDir>/libs/config/src"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
