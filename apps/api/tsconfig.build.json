{
  "extends": "@internal/config/tsconfig/build.json",
  "display": "API - Build",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "node_modules/@internal/db/dist"],
  "exclude": [
    "node_modules(?!/@internal/db/dist\b)(?:/.*)?",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}
